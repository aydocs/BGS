---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'İletişim',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="İletişim" title="Hadi Bağlanalım!" />

  <ContactUs
    id="form"
    title="Bugün bize bir mesaj bırakın!"
    subtitle="Daha hızlı yanıtlar için SSS bölümümüzü inceleyin. Aradığınız çözümü orada bulabilirsiniz! Bulamazsanız, destek ekibimiz size yardımcı olmaktan mutluluk duyacaktır."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Adınız',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-posta',
      },
    ]}
    textarea={{
      label: 'Mesajınız',
    }}
    disclaimer={{
      label:
        'Bu iletişim formunu göndererek kişisel bilgilerinizin toplanmasını kabul etmiş olursunuz.',
    }}
    description="Destek ekibimiz genellikle 24 iş saati içinde yanıt verir."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Yardımcı olmaya hazırız!"
    items={[
      {
        title: 'Genel destek',
        description: `Hesap yönetimi, site kullanımı, ödeme sorunları, satın alınan şablonlara erişim veya web sitesi işlevselliği ile ilgili genel sorularınız için bizimle sohbet edin.`,
      },
      {
        title: 'Satış ile iletişim',
        description:
          'Satın alma, özelleştirme seçenekleri, ticari kullanım lisansı, belirli şablonlar hakkında sorular için bizimle iletişime geçin.',
      },
      {
        title: 'Teknik destek',
        description:
          'Şablon kurulumu, düzenleme zorlukları, yazılımla uyumluluk sorunları, indirme hataları veya şablon kullanımıyla ilgili diğer teknik problemler için destek alın.',
      },
      {
        title: 'Telefon',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'E-posta',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Adres',
        description: '1234 Lorem Ipsum Cad., 12345, Miami, ABD',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
