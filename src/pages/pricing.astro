---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Fiyatlandırma',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Fiyatlandırma"
    title="Her Yolculuğa Uygun Yıldız Gibi Fiyatlar"
    subtitle="Kozmik hedeflerinize uyacak mükemmel planı seçin."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Fiyatlarımız"
    subtitle="Sadece ihtiyacınız olan için ödeme yapın"
    prices={[
      {
        title: 'temel',
        subtitle: 'Bireysel kullanım için ideal seçim',
        price: 29,
        period: 'aylık',
        items: [
          {
            description: 'Serbest ve esnek kullanım',
          },
          {
            description: 'Kolay ve hızlı erişim',
          },
          {
            description: 'Güvenilir performans',
          },
          {
            description: 'Kullanıcı dostu arayüz',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Başlayın',
          href: '#',
        },
      },
      {
        title: 'standart',
        subtitle: 'Küçük ekipler için en uygun seçenek',
        price: 69,
        period: 'Aylık',
        items: [
          {
            description: 'Gelişmiş özellikler',
          },
          {
            description: 'Takım içi iş birliği',
          },
          {
            description: 'Öncelikli destek',
          },
          {
            description: 'Daha fazla depolama alanı',
          },
          {
            description: 'Esnek planlama araçları',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Başlayın',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popüler',
      },
      {
        title: 'premium',
        subtitle: 'Şirketler için özel çözüm',
        price: 199,
        period: 'Aylık',
        items: [
          {
            description: 'Özel danışmanlık',
          },
          {
            description: 'Yüksek öncelikli destek',
          },
          {
            description: 'Özelleştirilebilir raporlar',
          },
          {
            description: 'Kurumsal entegrasyonlar',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Başlayın',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Fiyatlandırma ile ilgili özellikler"
    subtitle="Planlarımızı seçmenin avantajlarını keşfedin"
    columns={2}
    items={[
      {
        title: 'Katmanlı Fiyatlandırma Planları',
        description: 'Farklı bütçe ve ihtiyaçlara uygun çeşitli fiyatlandırma planları arasından seçim yapabilirsiniz.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Şeffaf Fiyatlandırma',
        description: 'Her plan için net fiyat bilgileri, gizli maliyet veya sürpriz ücret yoktur.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Güvenli Ödeme Yöntemleri',
        description: 'İşlemleriniz sırasında finansal bilgilerinizi koruyan güvenli ödeme sistemleri.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Anında Erişim',
        description: `Abonelik sonrası seçtiğiniz planın özelliklerine ve şablonlara hemen erişim imkanı.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Yükseltme Avantajları',
        description: 'Daha üst planlara geçiş yaparak daha fazla özellik ve avantajdan yararlanın.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '7/24 Destek',
        description: 'Sorularınız canlı sohbet, e-posta veya telefon ile her gün cevaplanır.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Planlardan yaratıcılığa rehberli yolculuk"
    tagline="basitleştirilmiş süreç"
    isReversed={true}
    items={[
      {
        title: 'Planları keşfedin',
        icon: 'tabler:number-1',
      },
      {
        title: 'Bir plan seçin',
        icon: 'tabler:number-2',
      },
      {
        title: 'Kayıt olun / Giriş yapın',
        icon: 'tabler:number-3',
      },
      {
        title: 'Siparişi gözden geçirin',
        icon: 'tabler:number-4',
      },
      {
        title: 'Ödeme bilgilerini girin',
        icon: 'tabler:number-5',
      },
      {
        title: 'Onay',
        icon: 'tabler:number-6',
      },
      {
        title: 'Şablonu indirip kullanmaya başlayın',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Adım görseli',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Fiyatlandırma SSS"
    subtitle="Doğru planı seçmek önemli, sorularınızı yanıtlamak için buradayız. Fiyatlandırma seçeneklerimiz hakkında merak ettikleriniz için doğru yerdesiniz."
    columns={1}
    items={[
      {
        title: 'Planlarla müşteri desteği geliyor mu?',
        description:
          'Kesinlikle, tüm planlarda size özel müşteri desteğine erişim sağlanır, her türlü soru ve sorununuza yardımcı olunur.',
      },
      {
        title: 'Planlar için deneme süresi var mı?',
        description:
          'Maalesef planlar için deneme süresi sunmuyoruz. Ancak şablonlarımızın kalitesini önizleyebileceğiniz demo bölümümüzü inceleyebilirsiniz.',
      },
      {
        title: 'Planlar arasında geçiş yapabilir miyim?',
        description:
          'Elbette! İhtiyaçlarınıza göre planınızı istediğiniz zaman yükseltebilir veya düşürebilirsiniz.',
      },
      {
        title: 'Fiyat dışında gizli ücret var mı?',
        description:
          'Hayır, abonelik bedeli her plan için listelenen tüm özellik ve şablonları kapsar. Gizli ücret veya ek maliyet yoktur.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Projelerinizi güçlendirmeye hazır mısınız?"
    subtitle="Şablonlarımızla işlerini dönüştüren memnun müşteriler topluluğumuza katılın."
    actions={[
      {
        variant: 'primary',
        text: 'Hemen başlayın',
        href: '/',
      },
    ]}
  />
</Layout>
